<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ===== HEADER ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgOfficer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_bg"
            android:padding="5dp"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/txtOfficerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Welcome, Employee"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btnLogoutEmployee"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:src="@drawable/ic_logout" />
    </LinearLayout>

    <!-- ===== ACTION BUTTONS ===== -->
    <Button
        android:id="@+id/btnAddCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THÊM KHÁCH HÀNG"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnAdjustRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adjust Saving Rates"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnEKYC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify Customer eKYC"
        android:layout_marginTop="8dp" />

    <!-- ===== SEARCH & SORT ===== -->
    <LinearLayout
        android:id="@+id/layoutSearchSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:queryHint="Search customer"
            app:iconifiedByDefault="false" />

        <Spinner
            android:id="@+id/spinnerSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- ===== CUSTOMER LIST ===== -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCustomers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp" />

</LinearLayout>
