<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header giá»‘ng customer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/imgOfficer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_bg"
            android:padding="5dp"
            android:src="@drawable/ic_user" />

        <!-- Title -->
        <TextView
            android:id="@+id/txtOfficerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Welcome, Employee"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Logout button -->
        <ImageView
            android:id="@+id/btnLogoutEmployee"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:src="@drawable/ic_logout" />
    </LinearLayout>

    <!-- Action Buttons -->
    <Button
        android:id="@+id/btnAddCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Customer Account"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnAdjustRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adjust Saving Rates"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnEKYC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify Customer eKYC"
        android:layout_marginTop="10dp"/>

    <!-- Customer List -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer List"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCustomers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>

</LinearLayout>
