<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <!-- TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mở tài khoản tiết kiệm"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginBottom="16dp" />

        <!-- SAVING INFO CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- AMOUNT -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tiền gửi"
                android:textSize="14sp"
                android:textColor="#6B7280" />

            <EditText
                android:id="@+id/edtSavingAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập số tiền (VNĐ)"
                android:inputType="number"
                android:layout_marginTop="6dp" />

            <!-- TERM -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kỳ hạn"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spinnerSavingTerm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp" />

            <!-- INTEREST -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lãi suất dự kiến"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvSavingInterest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.5% / năm"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#0FA958"
                android:layout_marginTop="4dp" />

            <!-- MONTHLY INTEREST -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lãi mỗi tháng (ước tính)"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvMonthlyInterest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 VNĐ / tháng"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_marginTop="4dp" />

            <!-- TOTAL INTEREST -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng lãi sau kỳ hạn"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvTotalInterest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 VNĐ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_marginTop="4dp" />

            <!-- TOTAL AT MATURITY -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền nhận khi đáo hạn"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvTotalAtMaturity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 VNĐ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0FA958"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- OPEN BUTTON -->
        <Button
            android:id="@+id/btnOpenSavingAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"

            android:backgroundTint="#0FA958"
            android:radius="16dp"
            android:text="Mở tài khoản tiết kiệm"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
