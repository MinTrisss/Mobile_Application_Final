<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:padding="16dp"
    tools:context=".PhoneTopUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvTopUpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nạp tiền điện thoại"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textSize="14sp"
                android:textColor="#6B7280" />

            <EditText
                android:id="@+id/edtPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập số điện thoại cần nạp"
                android:inputType="phone"
                android:layout_marginTop="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mệnh giá"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spinnerAmounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnTopUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#0FA958"
            android:text="Thanh toán qua VNPay"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
