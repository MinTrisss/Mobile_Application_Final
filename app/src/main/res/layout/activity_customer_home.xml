<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_user"
                android:background="@drawable/circle_bg"
                android:padding="5dp" />

            <TextView
                android:id="@+id/txtWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome, Customer"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/btnLogout"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_logout"
                android:padding="4dp"/>
        </LinearLayout>


        <!-- Balance Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main Account Balance"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txtBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25,450,000 VND"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>
        </LinearLayout>


        <!-- Bank Actions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banking Actions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="28dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_marginTop="12dp">

            <!-- Transfer -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_transfer"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfer"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Deposit -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_deposit"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deposit"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Withdraw -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_withdraw"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Withdraw"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- History -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_history"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:gravity="center"/>
            </LinearLayout>
        </GridLayout>


        <!-- Utilities -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Utilities"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="28dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_marginTop="12dp">

            <!-- Electricity -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_electricity"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electricity"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Water -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_water"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Phone -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_phone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top up"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Tickets -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_ticket"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tickets"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:gravity="center"/>
            </LinearLayout>
        </GridLayout>

    </LinearLayout>
</ScrollView>
