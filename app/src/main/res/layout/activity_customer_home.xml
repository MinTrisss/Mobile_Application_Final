<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_user"
                android:background="@drawable/bg_circle_green_light"
                android:padding="10dp" />

            <TextView
                android:id="@+id/txtWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xin chào, Khách hàng"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0FA958"
                android:layout_marginStart="12dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/btnLogoutCustomer"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_logout"
                app:tint="#0FA958" />
        </LinearLayout>

        <!-- ACCOUNT OVERVIEW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản thanh toán"
                android:textSize="14sp"
                android:textColor="#6B7280"/>

            <TextView
                android:id="@+id/txtAccountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tài khoản: CUS0000"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/txtBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 VNĐ"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#0FA958"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

        <!-- BANKING ACTIONS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giao dịch ngân hàng"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginTop="28dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_marginTop="12dp">

            <!-- Internal Transfer -->
            <LinearLayout
                android:id="@+id/btnInternalTransfer"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_transfer"
                    android:background="@drawable/bg_circle_green_light"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Chuyển khoản"
                    android:textSize="13sp"
                    android:textColor="#1F2937"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>


            <!-- Transaction History -->
            <LinearLayout
                android:id="@+id/btnTransactionHistory"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_history"
                    android:background="@drawable/bg_circle_green_light"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Lịch sử giao dịch"
                    android:textSize="13sp"
                    android:textColor="#1F2937"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Account Management -->
            <LinearLayout
                android:id="@+id/btnAccountManagement"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_withdraw"
                    android:background="@drawable/bg_circle_green_light"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Quản lý tài khoản"
                    android:textSize="13sp"
                    android:textColor="#1F2937"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </GridLayout>

        <!-- UTILITIES -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dịch vụ tiện ích"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginTop="28dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:id="@+id/btnUtilitiesElectric"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_electricity"
                    android:background="@drawable/bg_circle_green_light"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:text="Tiền điện"
                    android:textColor="#1F2937"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnUtilitiesWater"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_water"
                    android:background="@drawable/bg_circle_green_light"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Tiền nước"
                    android:textSize="13sp"
                    android:textColor="#1F2937"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnUtilitiesPhone"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_phone"
                    android:background="@drawable/bg_circle_green_light"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Nạp tiền điện thoại"
                    android:textSize="13sp"
                    android:textColor="#1F2937"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnUtilitiesTicket"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_ticket"
                    android:background="@drawable/bg_circle_green_light"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Mua vé"
                    android:textSize="13sp"
                    android:textColor="#1F2937"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </GridLayout>

    </LinearLayout>
</ScrollView>
