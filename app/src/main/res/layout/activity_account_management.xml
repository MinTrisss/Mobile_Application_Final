<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    tools:context=".AccountManagementActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        >

        <!-- CHECKING ACCOUNT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản thanh toán"
                android:textColor="#0FA958"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCheckingAccountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Số tài khoản: ..."
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvAccountHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Chủ tài khoản: ..."
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvOpenDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Ngày mở: ..."
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Số dư hiện tại"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvCheckingBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="... VNĐ"
                android:textColor="#0FA958"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- SAVING ACCOUNT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản tiết kiệm"
                android:textColor="#0FA958"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layoutSavingDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSavingAccountNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Số tài khoản: ..."
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvSavingTerm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Kỳ hạn: ..."
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Số tiền gửi"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvSavingBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="... VNĐ"
                    android:textColor="#0FA958"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                
                <Button
                    android:id="@+id/btnSettleSaving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#F59E0B" 
                    android:textColor="@android:color/white"
                    android:text="Tất toán sớm" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvSavingAccountStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Bạn chưa có tài khoản tiết kiệm" />

            <Button
                android:id="@+id/btnOpenSaving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="#0FA958"
                android:textColor="@android:color/white"
                android:text="Mở tài khoản tiết kiệm" />
        </LinearLayout>

        <!-- LOAN ACCOUNT CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản vay"
                android:textColor="#D32F2F"
                android:textSize="18sp"
                android:textStyle="bold" />

             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Quản lý các khoản vay và đăng ký vay mới." />

            <Button
                android:id="@+id/btnViewLoanDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="#D32F2F"
                android:textColor="@android:color/white"
                android:text="Xem chi tiết" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>