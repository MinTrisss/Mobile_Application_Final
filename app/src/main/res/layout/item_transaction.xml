<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="#FFFFFF"
    android:elevation="1dp">

    <!-- ICON -->
    <ImageView
        android:id="@+id/ivTransactionIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_transfer"
        android:background="#E6F6EE"
        android:padding="8dp"
        tools:ignore="ContentDescription" />

    <!-- INFO -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/tvTransactionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuyển tiền đến tài khoản 123..."
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#1F2937" />
        
        <TextView
            android:id="@+id/tvTransactionNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuyen tien mua do"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvTransactionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25/05/2024"
            android:textSize="13sp"
            android:textColor="#6B7280"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- AMOUNT -->
    <TextView
        android:id="@+id/tvTransactionAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 500,000 VNĐ"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#DC2626" />

</LinearLayout>
